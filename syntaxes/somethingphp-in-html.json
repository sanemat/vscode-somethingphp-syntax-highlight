{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "somethingphp",
  "scopeName": "text.html.somethingphp.injection",
  "injectionSelector": "punctuation.definition.comment.html",
  "patterns": [{ "include": "#tag-code" }],
  "repository": {
    "tag-code": {
      "begin": "<!--#",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.tag-code-begin.somethingphp"
        }
      },
      "end": "-->",
      "endCaptures": {
        "0": {
          "name": "keyword.control.tag-code-end.somethingphp"
        }
      },
      "name": "meta.embedded.tag-code.somethingphp",
      "patterns": [
        {
          "include": "source.php"
        }
      ]
    }
  }
}
